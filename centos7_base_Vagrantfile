# file: centos7_base_Vagrantfile
#
# This Vagrantfile sets up the centos7 base image with proper points to active yum repos
#
# Meant to help the open-on-demand vagrant setup
#
# Ramses van Zon, July 20 2024

Vagrant.configure("2") do |config|
 config.vm.box = "generic/centos7"
 config.ssh.insert_key = false
 config.vm.box_check_update = false
 config.vbguest.auto_update = false
 config.vm.provision :shell, path: "centos7_base_setup.sh"
end                                                                             

